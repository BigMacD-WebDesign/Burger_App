<h1>Burgers!</h1>

<h3 id="tomato">Enjoy the burgers!</h3>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burger_name}}</li><button class="devour-burger" data-id="{{id}}">Devour</button>
    {{/unless}}
  {{/each}}
</ul>

<h3 id="lettuce">Burgers Eaten</h3>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burger_name}}</li><button class="delete-burger" data-id="{{id}}">Remove</button>
    {{/if}}
  {{/each}}
</ul>

<h1>Order a Burger!</h1>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
