<h1>Burgers!</h1>

<h2>Enjoy the burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burger_name}}<button class="devour-burger" data-id="{{id}}">Devour</button></li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burger_name}}<button class="delete-burger" data-id="{{id}}">Remove</button></li>
    {{/if}}
  {{/each}}
</ul>

<h2>Order a Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

